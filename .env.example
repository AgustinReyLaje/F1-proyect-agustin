# Environment Variables for F1 Analytics Platform

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
DB_NAME=f1_analytics_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=600

# CORS Settings (for frontend integration)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# F1 API Configuration
# Note: Using Jolpica API (community fork of Ergast)
# Original Ergast API was shut down in 2024
F1_API_BASE_URL=http://api.jolpi.ca/ergast/f1
F1_API_RATE_LIMIT=4

# Logging
LOG_LEVEL=INFO

# Production Settings (uncomment for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
